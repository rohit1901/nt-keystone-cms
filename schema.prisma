datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Certification {
  id          String @id @default(cuid())
  title       String @default("")
  description String @default("")
  image       String @default("")
  link        String @default("")
  width       Int?
  height      Int?
}

model Benefit {
  id                         String         @id @default(cuid())
  icon                       String         @default("")
  title                      String         @default("")
  description                String         @default("")
  from_StandardPage_benefits StandardPage[] @relation("StandardPage_benefits")
}

model Testimonial {
  id       String  @id @default(cuid())
  name     String  @default("")
  role     String  @default("")
  company  String  @default("")
  content  String  @default("")
  rating   Int?
  imageUrl String  @default("")
  badge    String? @default("{\"icon\":\"\",\"label\":\"\"}")
}

model FaqItem {
  id                     String         @id @default(cuid())
  question               String         @default("")
  answer                 String         @default("")
  from_StandardPage_faqs StandardPage[] @relation("StandardPage_faqs")
}

model Hero {
  id           String  @id @default(cuid())
  subHeading   String  @default("")
  ctaLabel     String  @default("")
  ctaHref      String  @default("")
  ctaExternal  Boolean @default(false)
  bannerConfig String? @default("{\"icon\":\"RiFlagLine\",\"additional\":{\"icon\":\"RiStarLine\",\"text\":\"New Feature\"}}")
}

model NavigationItem {
  id          String         @id @default(cuid())
  icon        String         @default("")
  ctaLabel    String         @default("")
  ctaHref     String         @default("")
  ctaExternal Boolean        @default(false)
  section     FooterSection? @relation("NavigationItem_section", fields: [sectionId], references: [id])
  sectionId   String?        @map("section")

  @@index([sectionId])
}

model FooterSection {
  id    String           @id @default(cuid())
  title String           @default("")
  items NavigationItem[] @relation("NavigationItem_section")
}

model ApproachStep {
  id           String  @id @default(cuid())
  title        String  @default("")
  description  String  @default("")
  activityTime String  @default("")
  type         String?
  stepOrder    Int?
}

model AnalyticsReport {
  id            String                 @id @default(cuid())
  heading       String                 @default("")
  subheading    String                 @default("")
  stats         String?                @default("{\"totalDeployments\":\"0\",\"deploymentChange\":\"+0\",\"deploymentChangePercent\":\"0%\",\"changePeriod\":\"Last 30 days\"}")
  tableHeadings String?                @default("[]")
  summaryItems  AnalyticsSummaryItem[] @relation("AnalyticsReport_summaryItems")
}

model AnalyticsSummaryItem {
  id                                String            @id @default(cuid())
  name                              String            @default("")
  deployments                       String            @default("")
  uptime                            String            @default("")
  clientSatisfaction                String            @default("")
  efficiency                        String            @default("")
  revenueGrowth                     String            @default("")
  bgColor                           String            @default("")
  changeType                        String?
  from_AnalyticsReport_summaryItems AnalyticsReport[] @relation("AnalyticsReport_summaryItems")
}

model StandardPage {
  id          String    @id @default(cuid())
  title       String    @default("")
  description String    @default("")
  image       String    @default("")
  imageAlt    String    @default("")
  ctaLabel    String    @default("")
  ctaHref     String    @default("")
  ctaExternal Boolean   @default(false)
  subheading  String    @default("")
  benefits    Benefit[] @relation("StandardPage_benefits")
  faqs        FaqItem[] @relation("StandardPage_faqs")
}
